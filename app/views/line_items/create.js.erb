$('#notice').hide(); //This is so that you hide any lingering notice once you insert a product in cart via ajax (since page is not being refreshed)

if ($('#cart tr').length == 1) {
  $('#cart').show('blind', 10);
}

$('#cart').html("<%= escape_javascript render :partial => 'carts/cart' %>");

$('#current_item').css({'background-color':'#88ff88'}).animate({'background-color':'#114411'}, 1000);
// From highlight color to background color by fading
