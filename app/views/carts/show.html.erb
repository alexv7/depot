<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Cart</h2>

<table>
  <% @cart.line_items.each do |item| %>

    <%= form_for item do |f|%>
      <tr>
        <td>
            <%= f.submit :value => "Update Qty" %>
            <%= f.text_field :quantity, :size => 2 %>
        </td>
        <% end %>

        <td><%= item.product.title %></td>
        <td class="item_price"><%= number_to_currency(item.total_price) %></td>
        <% if item.quantity == 1 %>
        <td class="item_price"></td>
        <% else  %>
        <td class="item_price">(<%=number_to_currency(item.product.price)%> each)</td>
        <% end %>
        <td><%= button_to 'Delete Line Item', item, :method => :delete, :confirm => 'Are You Sure' %></td>
    </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>


<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure'} %>

